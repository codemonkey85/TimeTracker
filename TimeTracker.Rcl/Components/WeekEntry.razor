@if (WeekEntryModel is { StartDate.DayOfWeek: DayOfWeek.Sunday })
{
    <div class="week-entry-container">
        <EditForm Model="WeekEntryModel" OnValidSubmit="SaveTimeEntryAsync">
            <DataAnnotationsValidator />
            @foreach (var timeEntryModel in WeekEntryModel.TimeEntries)
            {
                <TimeEntry TimeEntryModel="timeEntryModel" />
            }
            <span>Total hours: @WeekEntryModel.TotalHours</span>
            <br />
            <span>Remaining hours: <strong>@(MaxHours - WeekEntryModel.TotalHours)</strong> out of @MaxHours.ToString("0.00")</span>
            <div>
                <button type="submit" class="btn btn-primary">
                    Save
                </button>
            </div>
        </EditForm>
    </div>
}
