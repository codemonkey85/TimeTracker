@if (TimeEntryModel is not null)
{
    <MudPaper Class="mt-4">
        <MudGrid>
            <MudItem xs="11" sm="11" md="11" lg="11" xl="11" Class="mx-1">
                <MudText>
                    @TimeEntryModel.Date?.ToString(Constants.DateFormat)
                </MudText>
            </MudItem>

            <MudItem xs="11" sm="11" md="5" lg="5" xl="5" Class="mx-1">
                <MudTimePicker @bind-Time="@TimeEntryModel.StartTime"
                               @bind-Time:after="@Refresh"
                               AmPm="@true"
                               Label="Start" />
            </MudItem>

            <MudItem xs="11" sm="11" md="5" lg="5" xl="5" Class="mx-1">
                <MudTimePicker @bind-Time="@TimeEntryModel.EndTime"
                               @bind-Time:after="@Refresh"
                               AmPm="@true"
                               Label="End" />
            </MudItem>

            <MudItem xs="11" sm="11" md="11" lg="11" xl="11" Class="ma-2">
                <MudText>
                    Total hours: @CalculateHoursWorked(TimeEntryModel).ToString(Constants.HoursFormat)
                </MudText>
            </MudItem>

            <MudItem xs="11" sm="11" md="11" lg="11" xl="11" Class="ma-2">
                <MudText>
                    <TtButton @onclick="ClearTimeEntry">
                        Clear
                    </TtButton>
                </MudText>
            </MudItem>
        </MudGrid>
    </MudPaper>
}
